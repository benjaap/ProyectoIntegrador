<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="../public/images/banner-autos-1.jpg" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="pp3">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Veh√≠culos:</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<div class="pp2">
				<% for(i=0;i<lista.length;i++){ %>
					<section class="product-box">
						<a href="/product/detalle">
							<figure class="product-box_image">
								<img src="<%= lista[i].imagen %>" alt="Foto Producto">
							</figure>
							<article class="product-box_data">
								<h2><%= lista[i].nombreDelProducto %></h2>
								<div>
									<p><%= lista[i].descripcion %></p>
								</div>
								<div>
									<p><%= comentario[i].usuario %></p>
								</div>
								<div>
									<p><%= comentario[i].textoDelComentario %></p>
								</div>
								
							</article> 
						</a>
					</section>
				<% } %>
			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
