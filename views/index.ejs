<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if(!auth){%>
		<%- include('./partials/header')%>
	<% } else{ %> 
		<%- include('./partials/headerLogueado')%> 
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="../public/images/banner-autos-1.jpg" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="pp3">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Veh√≠culos:</h2>
			</div>
			<div class="pp2">
				<% productos.forEach(function(producto){%>

					<section class="product-box">
						<a href="/product/detalle/:id">
							<figure class="product-box_image">
								<img src="<%= producto.url_image %>" alt="Foto Producto">
							</figure>
							<article class="product-box_data">
								<h2><%= producto.name_ %></h2>
								<div>
									<p><%= producto.description %></p>
								</div>
							</article> 
						</a>
					</section>
				
				<% }) %>
			

			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
